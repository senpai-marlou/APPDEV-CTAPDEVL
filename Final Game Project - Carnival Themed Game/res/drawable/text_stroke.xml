<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/text_stroke.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
            android:color="@color/black" />
        </shape>
    </item>
    <!-- Text -->
    <item android:top="2dp"> <!-- Adjust top padding to match stroke width -->
        <shape>
            <solid android:color="@android:color/transparent" />
            <padding
                android:left="2dp"
            android:right="2dp"
            android:top="2dp"
            android:bottom="2dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>