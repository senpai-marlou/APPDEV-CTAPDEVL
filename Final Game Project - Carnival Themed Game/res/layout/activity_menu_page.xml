<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a_highlights"
    android:id="@+id/menuPage"
    tools:context=".MenuPage">

    <Button
        android:id="@+id/button_back_to_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/gameTitle"
        android:layout_width="match_parent"
        android:layout_height="434dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-43dp"
        android:src="@drawable/ic_main" />


    <!-- Play Buttons -->
    <ImageView
        android:id="@+id/playButton"
        android:layout_width="258dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="404dp"
        android:clickable="true"
        android:src="@drawable/a_play_on" />

    <ImageView
        android:id="@+id/leaderboardButton"
        android:layout_width="189dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="495dp"
        android:clickable="true"
        android:src="@drawable/a_leaderboard_on" />

    <ImageView
        android:id="@+id/gameplayButton"
        android:layout_width="189dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="558dp"
        android:clickable="true"
        android:src="@drawable/a_gameplay_on" />

    <!-- Nickname Buttons -->
    <ImageView
        android:id="@+id/nicknameEditText"
        android:layout_width="258dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="404dp"
        android:clickable="true"
        android:visibility="invisible"
        android:src="@drawable/a_nickname" />

    <EditText
        android:id="@+id/nicknamePlayer"
        android:layout_width="258dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="403dp"
        android:background="@null"
        android:fontFamily="@font/lg_regular"
        android:gravity="center"
        android:hint="PLAYER NAME"
        android:textColor="#ffffff"
        android:textColorHint="#B3ffffff"
        android:textCursorDrawable="@drawable/transparent_cursor"
        android:textSize="30sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/nicknamePlayerNew"
        android:layout_width="258dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="403dp"
        android:background="@null"
        android:fontFamily="@font/lg_regular"
        android:gravity="center"
        android:hint="PLAYER NAME"
        android:textColor="#ffffff"
        android:textColorHint="#B3ffffff"
        android:textCursorDrawable="@drawable/transparent_cursor"
        android:textSize="30sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/startButton"
        android:layout_width="189dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="495dp"
        android:clickable="true"
        android:visibility="invisible"
        android:src="@drawable/a_start_on" />

    <ImageView
        android:id="@+id/existingPlayer"
        android:layout_width="86dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="558dp"
        android:clickable="true"
        android:visibility="invisible"
        android:src="@drawable/a_existingplayer_on" />

    <ImageView
        android:id="@+id/newPlayer"
        android:layout_width="86dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="199dp"
        android:layout_marginTop="558dp"
        android:clickable="true"
        android:visibility="invisible"
        android:src="@drawable/a_newplayer_off" />

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="37dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="535dp"
        android:clickable="true"
        android:visibility="invisible"
        android:src="@drawable/a_back" />

    <ImageView
        android:id="@+id/backgroundMusic"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginBottom="102dp"
        android:clickable="true"
        android:src="@drawable/ic_music_on"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/sfxMusic"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="162dp"
        android:layout_marginBottom="102dp"
        android:clickable="true"
        android:src="@drawable/ic_sfx_on"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/exitButton"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="248dp"
        android:layout_marginBottom="102dp"
        android:clickable="true"
        android:src="@drawable/ic_exit_on"
        android:visibility="visible" />

</RelativeLayout>