<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tutorialPage"
    tools:context=".TutorialPage">

    <ImageView
        android:id="@+id/imageFillTop"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-59dp"
        android:src="@drawable/a_fill"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageFillBottom"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-58.5dp"
        android:src="@drawable/a_fill"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1920dp"
        android:layout_height="1080dp"
        android:src="@drawable/t_one"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/next1"
        android:layout_width="189dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="670dp"
        android:clickable="true"
        android:visibility="invisible"
        android:src="@drawable/a_next_on" />

    <ImageView
        android:id="@+id/next2"
        android:layout_width="189dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="670dp"
        android:clickable="true"
        android:visibility="invisible"
        android:src="@drawable/a_next_on" />

    <ImageView
        android:id="@+id/getIt"
        android:layout_width="189dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="464dp"
        android:clickable="true"
        android:visibility="invisible"
        android:src="@drawable/a_get_on" />

</RelativeLayout>