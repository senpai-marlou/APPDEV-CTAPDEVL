<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gameOverPage"
    android:background="@drawable/a_highlights"
    tools:context=".GameOverPage">

    <ImageView
        android:id="@+id/carnivalAsset"
        android:layout_width="wrap_content"
        android:layout_height="277dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-23dp"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        android:src="@drawable/ic_carnival" />

    <ImageView
        android:id="@+id/largeBoard"
        android:layout_width="308dp"
        android:layout_height="187dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="181dp"
        android:visibility="invisible"
        android:src="@drawable/ic_largeboard" />

    <ImageView
        android:id="@+id/retryButton"
        android:layout_width="76dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="159dp"
        android:layout_marginTop="323dp"
        android:clickable="true"
        android:visibility="invisible"
        android:src="@drawable/a_retry_on" />

    <ImageView
        android:id="@+id/toHomeButton"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="248dp"
        android:layout_marginTop="336dp"
        android:clickable="true"
        android:visibility="invisible"
        android:src="@drawable/a_home_on" />

    <ImageView
        android:id="@+id/toLeaderboardButton"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="336dp"
        android:clickable="true"
        android:visibility="invisible"
        android:src="@drawable/a_circleleaderboard_on" />

    <TextView
        android:id="@+id/gameOverText"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="204dp"
        android:fontFamily="@font/lg_regular"
        android:gravity="center_horizontal"
        android:text="GAME OVER"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:textSize="24.6sp" />

    <TextView
        android:id="@+id/currentScore"
        android:layout_width="263dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="239dp"
        android:fontFamily="@font/lg_regular"
        android:gravity="center_horizontal"
        android:text="SCORE: "
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:textSize="43sp" />

    <TextView
        android:id="@+id/highscore"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="293dp"
        android:fontFamily="@font/lg_regular"
        android:gravity="center_horizontal"
        android:text="HIGH SCORE: "
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/mascots"
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="417dp"
        android:layout_marginEnd="31dp"
        android:visibility="invisible"
        android:src="@drawable/ic_mascots" />

    <ImageView
        android:id="@+id/top1_GameOver"
        android:layout_width="265dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="500dp"
        android:visibility="invisible"
        android:src="@drawable/a_top1" />

    <ImageView
        android:id="@+id/top2_GameOver"
        android:layout_width="265dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="585dp"
