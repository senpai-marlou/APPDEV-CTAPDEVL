        android:src="@drawable/a_top2" />

    <ImageView
        android:id="@+id/top3_GameOver"
        android:layout_width="265dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="670dp"
        android:visibility="invisible"
        android:src="@drawable/a_top3" />

    <TextView
        android:id="@+id/top1Name_GameOver"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="517dp"
        android:fontFamily="@font/lg_regular"
        android:gravity="center_horizontal"
        android:text=""
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/top1Score_GameOver"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="543dp"
        android:fontFamily="@font/lg_regular"
        android:gravity="center_horizontal"
        android:text=""
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/top2Name_GameOver"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="602dp"
        android:fontFamily="@font/lg_regular"
        android:gravity="center_horizontal"
        android:text=""
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/top2Score_GameOver"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="627dp"
        android:fontFamily="@font/lg_regular"
        android:gravity="center_horizontal"
        android:text=""
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/top3Name_GameOver"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="688dp"
        android:fontFamily="@font/lg_regular"
        android:gravity="center_horizontal"
        android:text=""
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/top3Score_GameOver"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="713dp"
        android:fontFamily="@font/lg_regular"
        android:gravity="center_horizontal"
        android:text=""
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:textSize="18sp" />


</RelativeLayout>